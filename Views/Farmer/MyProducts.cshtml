@model List<EAPD7111_Agri_Energy_Connect.Models.ProductModel>

@{
    ViewData["Title"] = "My Products";
}

<style>
    body {
        background-image: url('https://d3k81ch9hvuctc.cloudfront.net/company/VM3rh3/images/36966765-ffee-4539-b8a3-0536b39541af.jpeg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .content-container {
        background-color: rgba(245, 255, 245, 0.95);
        border-radius: 16px;
        padding: 30px;
        max-width: 1000px;
        margin: 50px auto;
        box-shadow: 0 10px 25px rgba(0, 64, 0, 0.2);
    }

    h2 {
        color: #1B4332;
        text-align: center;
        margin-bottom: 30px;
    }

    .table {
        background-color: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        margin-top: 20px;
    }

        .table th {
            background-color: #2D6A4F;
            color: #fff;
        }

    .btn-edit {
        background-color: #74c69d;
        color: #fff;
        border: none;
        padding: 6px 12px;
        border-radius: 5px;
        margin-right: 5px;
        text-decoration: none;
    }

        .btn-edit:hover {
            background-color: #52b788;
        }

    .btn-delete {
        background-color: #d9534f;
        color: #fff;
        border: none;
        padding: 6px 12px;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn-delete:hover {
            background-color: #c9302c;
        }

    .text-muted {
        color: #6c757d !important;
    }
</style>

<div class="content-container">
    <h2>My Products</h2>

    @if (!Model.Any())
    {
        <p class="text-muted">You haven't added any products yet.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Date Added</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.ProductType</td>
                        <td>@product.Description</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>@product.DateAdded.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn-edit">Edit</a>
                            <form asp-action="DeleteProduct" asp-route-id="@product.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
